      </a>
    </div>
  </div>

</div>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  function loginUser() { fetch('/api/session/login', { method: 'POST', body:
  JSON.stringify({ email: document.getElementById('email').value, password:
  document.getElementById('password').value }), headers: { 'Content-Type':
  'application/json' } }) .then(response => response.json()) .then(data => { if
  (data.error) { Swal.fire({ icon: 'error', title: 'Error', text: data.error,
  confirmButtonText: 'Aceptar' }); } else { window.location.href =
  '/api/session/perfil'; // Redirige al perfil } }) .catch(error => {
  console.error('Error:', error); Swal.fire({ icon: 'error', title: 'Error',
  text: 'Hubo un problema al iniciar sesión.', confirmButtonText: 'Aceptar' });
  }); }

</script>